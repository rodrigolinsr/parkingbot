{
    "name": "ParkingBot",
    "description": "Bot app for managing parking spots.",
    "type": "project",
    "require": {
        "php": ">=7.1.3",
        "jclg/php-slack-bot": "^0.0.6",
        "laravel/lumen-framework": "5.6.*",
        "laravel/tinker": "^1.0",
        "vlucas/phpdotenv": "~2.2"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "phpunit/phpunit": "~7.0",
        "mockery/mockery": "~1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Parking\\": "src/Parking/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/",
            "database/"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
